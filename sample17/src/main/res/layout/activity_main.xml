<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="top.lc951.sample17.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample17_1:箱子相互碰撞"
        android:onClick="sample17_1"
        />
     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample17_2:复合碰撞"
        android:onClick="sample17_2"
        />
     <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sample17_3:凹凸地形碰撞"
        android:onClick="sample17_3"
        />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
